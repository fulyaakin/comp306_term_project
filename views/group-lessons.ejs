<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="/assets/css/custom.css">-->
    <title><%= title %></title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }
</style>
<body>
<div class="page-wrapper">
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1"><a href="/">GYM306 Lessons</a></span>
        <a class="float-right" href="/lessons" title="lessons">All Lessons</a>
        <a class="float-right" href="/privateLesson" title="groupLesson">Private Lessons</a>
    </nav>
    <div class="table-wrapper">
        <% if (groupLessons.length > 0) { %>
            <table class="table table-hovered">
                <table class="table table-hovered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Lesson ID</th>
                            <th scope="col">Lesson Name</th>
                            <th scope="col">Trainer First Name</th>
                            <th scope="col">Trainer Last Name</th>
                            <th scope="col">Duration</th>
                            <th scope="col">Day</th>
                            <th scope="col">Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% groupLessons.forEach((lesson, index) => { %>
                            <tr>
                                <th scope="row"><%= lesson.lesson_id %></th>
                                <td><%= lesson.lesson_name %></td>
                                <td><%= lesson.first_Name %></td>
                                <td><%= lesson.last_Name %></td>
                                <td><%= lesson.duration %></td>
                                <td><%= lesson.day %></td>
                                <td><%= lesson.time %></td>
                            </tr>
                        <% }) %>
                    </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No lessons found. </p>
        <% } %>
    </div>
</div>
</body>
</html>