<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="/assets/css/custom.css">-->
    <title><%= title %></title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }
    .add-member-form {
        margin-top: 50px;
    }
</style>
<body>
<div class="page-wrapper">
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1"><a href="/">GYM306 Members</a></span>
        <a class="float-right" href="/enrollments" title="Enrollments">Enrollments</a>
        <a class="float-right" href="/add" title="Add a New member">Add a member</a>
    </nav>
    <div class="table-wrapper">
        <% if (members.length > 0) { %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Birth Date</th>
                        <th scope="col">Sex</th>
                        <th scope="col">Member ID</th>
                    </tr>
                </thead>
                <tbody>
                    <% members.forEach((member, index) => { %>
                        <tr>
                            <td><%= member.first_Name %></td>
                            <td><%= member.last_Name %></td>
                            <td><%= member.address %></td>
                            <td><%= member.birth_Date %></td>
                            <td><%= member.sex %></td>
                            <th scope="row"><%= member.member_ID %></th>
                            <td>
                                <a href="delete/<%= member.member_ID %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No members found. Go <a href="/add" >here</a> to add members.</p>
        <% } %>
    </div>
</div>
</body>
</html>